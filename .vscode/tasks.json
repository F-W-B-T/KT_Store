{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-msvc",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "main.cpp",
                "StoreEnt.cpp",
                "ws2_32.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Store_server"
            },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "build-client",
            "type": "shell",
            "command": "cl.exe",
            "args": ["/EHsc", "main.cpp", "ws2_32.lib"],
            "options": {
                "cwd": "${workspaceFolder}/Client_App"
            },
            "group": "build",
            "problemMatcher": ["$msCompile"]
        }
    ]
}
